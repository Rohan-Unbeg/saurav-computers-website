---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

// SEO details
const seoTitle = "SBI Kiosk Banking at Saurav Computer - Banking Services in Shendurjan";
const seoDescription = "Access State Bank of India services including deposits, withdrawals, money transfers, and account opening at our authorized SBI Customer Service Point.";

// Breadcrumbs
const breadcrumbs = [
  { title: "Home", url: "/" },
  { title: "Services", url: "#" },
  { title: "SBI Kiosk Banking", url: "/sbi-kiosk" }
];

// SBI Kiosk Banking Services
const services = [
  {
    title: "Cash Deposits & Withdrawals",
    description: "Conveniently deposit or withdraw cash from your SBI accounts without traveling to a branch.",
    icon: "cash"
  },
  {
    title: "Money Transfers",
    description: "Transfer funds between SBI accounts securely and instantly.",
    icon: "transfer"
  },
  {
    title: "No-Frills Accounts",
    description: "Open zero balance accounts with a maximum balance of ₹50,000 and daily transaction limit of ₹10,000.",
    icon: "account"
  },
  {
    title: "Credit Cards",
    description: "Apply for General Purpose Credit Card (GCC) and Kisan Credit Card (KCC) for your financial needs.",
    icon: "card"
  },
  {
    title: "Term Deposits",
    description: "Create and manage term deposits with competitive interest rates.",
    icon: "savings"
  },
  {
    title: "Loan Services",
    description: "Access loans against Term Deposit Receipts and other eligible collaterals.",
    icon: "loan"
  }
];

// Helper function for icons
const getIcon = (iconName) => {
  switch(iconName) {
    case 'cash':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>`;
    case 'transfer':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>`;
    case 'account':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>`;
    case 'card':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>`;
    case 'savings':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
    case 'loan':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
  }
};

// Benefits
const benefits = [
  "Extended banking hours beyond traditional bank branches",
  "Biometric authentication through electronic thumb impression",
  "No cheque book required for transactions",
  "Cash-only transactions with simplified procedures",
  "Convenient location within the community",
  "Personalized assistance with banking queries"
];

// CSP Requirements
const cspRequirements = [
  "150-200 sq ft outlet in a good location",
  "Personal computer with minimum 20 GB hard disk",
  "Broadband/VSAT internet connection",
  "Webcam for identification verification",
  "Printer/scanner for documentation",
  "Fingerprint device for biometric authentication"
];
---

<Layout title={seoTitle} description={seoDescription}>
  <PageHeader 
    title="SBI Kiosk Banking Services" 
    subtitle="Access State Bank of India services in your neighborhood"
    imageUrl="https://images.pexels.com/photos/259027/pexels-photo-259027.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
    breadcrumbs={breadcrumbs}
  />
  
  <!-- Overview Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto" data-aos="fade-up">
        <div class="flex flex-col md:flex-row items-center gap-6 md:gap-8 mb-12">
          <div class="w-full md:w-1/2">
            <img 
              src="https://images.pexels.com/photos/5767589/pexels-photo-5767589.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
              alt="Person using banking services" 
              class="rounded-lg shadow-lg w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
          
          <div class="w-full md:w-1/2">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Authorized SBI Customer Service Point</h2>
            <p class="text-gray-700 dark:text-gray-400 mb-4">
              As a State Bank of India Customer Service Point (CSP), Saurav Computer brings essential banking services to the doorstep of the Shendurjan community. Our kiosk banking facility helps bridge the gap between traditional banking and the unbanked population.
            </p>
            <p class="text-gray-700 dark:text-gray-400">
              Through our services, residents can access banking facilities without traveling to distant bank branches, making financial inclusion a reality for all.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 px-4 sm:px-0" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">SBI Kiosk Banking Services</h2>
        <p class="text-lg text-gray-700 dark:text-gray-400 max-w-3xl mx-auto">
          Access essential banking services at our authorized SBI Customer Service Point in Shendurjan.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map((service, index) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 border border-gray-100 dark:border-gray-700 h-full" data-aos="fade-up" data-aos-delay={100 + (index * 50)}>
            <div class="flex items-center mb-4">
              <div class="p-2 rounded-full bg-primary-100 dark:bg-primary-900 w-12 h-12 flex items-center justify-center mr-4">
                <div class="text-primary-500 dark:text-primary-400" set:html={getIcon(service.icon)} />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{service.title}</h3>
            </div>
            <p class="text-gray-700 dark:text-gray-400">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Benefits -->
  <section class="py-12 sm:py-16 lg:py-20 card-alt">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <div data-aos="fade-right">
          <h2 class="text-3xl font-bold text-gray-900 mb-6 text-white">Customer Benefits</h2>
          <ul class="space-y-4">
            {benefits.map(benefit => (
              <li class="flex items-start">
                <svg class="h-6 w-6 text-primary-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700 dark:text-gray-400">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div data-aos="fade-left">
          <div class="bg-primary-50 rounded-lg p-8 border border-primary-100">
            <h3 class="text-2xl font-bold text-primary-900 mb-4">Interested in Becoming a CSP?</h3>
            <p class="text-gray-700 dark:text-gray-400 mb-4">
              If you're interested in becoming a State Bank of India Customer Service Point, you'll need the following:
            </p>
            
            <ul class="space-y-3 mb-6">
              {cspRequirements.map(requirement => (
                <li class="flex items-start">
                  <svg class="h-5 w-5 text-primary-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700 dark:text-gray-400 text-sm">{requirement}</span>
                </li>
              ))}
            </ul>
            
            <a href="/contact" class="btn btn-primary block text-center">
              Inquire About CSP Opportunities
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 bg-gradient-to-r from-indigo-800 to-purple-900">
    <div class="container mx-auto px-4 text-center text-white" data-aos="fade-up">
      <h2 class="text-3xl font-bold mb-4">Banking Services Made Accessible</h2>
      <p class="text-xl max-w-3xl mx-auto mb-8">
        Visit our center in Shendurjan to access State Bank of India services without traveling to a distant branch.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-indigo-500 transition-all duration-300">
          Contact Us
        </a>
        <a href="tel:+919823779796" class="btn-outline border-2 border-white text-white hover:bg-white/10 font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-white/50 transition-all duration-300 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Us
        </a>
      </div>
    </div>
  </section>
</Layout>