---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

// SEO details
const seoTitle = "Downloads - Saurav Computer Resources";
const seoDescription = "Access and download resources like MS-CIT hall tickets, forms, and other study materials provided by Saurav Computer in Shendurjan.";

// Breadcrumbs
const breadcrumbs = [
  { title: "Home", url: "/" },
  { title: "Resources", url: "#" },
  { title: "Downloads", url: "/downloads" }
];

// Download resources
const downloadResources: DownloadCategory[] = [
  {
    category: "Course Materials",
    resources: [
      {
        title: "MS-CIT Reference Guide",
        description: "Comprehensive reference guide for MS-CIT course covering all modules.",
        link: "https://www.mkcl.org/",
        icon: "pdf"
      },
      {
        title: "Tally Practice Files",
        description: "Practice files for Tally course exercises and assignments.",
        link: "https://tallysolutions.com/",
        icon: "zip"
      },
      {
        title: "GCC-TBC Typing Exercises",
        description: "Typing practice exercises for GCC-TBC exam preparation.",
        link: "https://www.maharashtraeducation.com/",
        icon: "doc"
      }
    ]
  },
  {
    category: "Examination Resources",
    resources: [
      {
        title: "MS-CIT Hall Ticket",
        description: "Download your MS-CIT examination hall ticket. You'll need your registration number.",
        link: "https://www.mkcl.org/",
        icon: "web"
      },
      {
        title: "GCC-TBC Exam Schedule",
        description: "Latest examination schedule for GCC-TBC candidates.",
        link: "https://www.maharashtraeducation.com/",
        icon: "pdf"
      },
      {
        title: "MKCL KLiC Exam Instructions",
        description: "Important instructions for MKCL KLiC Diploma examinations.",
        link: "https://www.mkcl.org/",
        icon: "pdf"
      }
    ]
  },
  {
    category: "Forms & Applications",
    resources: [
      {
        title: "Course Registration Form",
        description: "Registration form for enrolling in courses at Saurav Computer.",
        link: "#",
        icon: "pdf"
      },
      {
        title: "SBI Account Opening Form",
        description: "Application form for opening a no-frills SBI account through our kiosk.",
        link: "https://www.sbi.co.in/",
        icon: "pdf"
      },
      {
        title: "Scholarship Application Form",
        description: "Form for applying to various scholarship programs for students.",
        link: "#",
        icon: "pdf"
      }
    ]
  }
];

// Define valid icon types
type IconType = 'pdf' | 'doc' | 'xls' | 'zip' | 'image' | 'web' | 'word' | 'excel' | 'powerpoint' | 'text';

// Define types for download resources
interface DownloadResource {
  title: string;
  description: string;
  link: string;
  icon: IconType;
}

interface DownloadCategory {
  category: string;
  resources: DownloadResource[];
}

// Helper function for icons
const getIcon = (iconType: IconType) => {
  switch(iconType) {
    case 'pdf':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>`;
    case 'doc':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>`;
    case 'zip':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
              </svg>`;
    case 'web':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>`;
  }
};
---

<Layout title={seoTitle} description={seoDescription}>
  <PageHeader 
    title="Downloads & Resources" 
    subtitle="Access forms, documents, and resources for our courses and services"
    imageUrl="https://images.pexels.com/photos/590016/pexels-photo-590016.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
    breadcrumbs={breadcrumbs}
  />
  
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <p class="text-lg text-gray-700 dark:text-gray-300 text-center mb-12 px-4 sm:px-0" data-aos="fade-up">
          Here you'll find downloadable resources for our courses, examination materials, and application forms. Some links will direct you to official websites where you'll need to log in with your credentials.
        </p>
        
        <div class="space-y-12">
          {downloadResources.map((category, index) => (
            <div data-aos="fade-up" data-aos-delay={index * 100}>
              <h2 class="text-2xl font-bold text-gray-900 mb-6 dark:text-white">{category.category}</h2>
              
              <div class="space-y-4">
                {category.resources.map((resource: DownloadResource) => (
                  <div class="border border-gray-200 dark:border-gray-700 rounded-lg hover:shadow-lg transition-all duration-300 p-5 flex hover:border-primary-300 dark:hover:border-primary-500 bg-white dark:bg-gray-800">
                    <div class="mr-4 flex-shrink-0" set:html={getIcon(resource.icon)} />
                    
                    <div class="flex-grow">
                      <h3 class="text-xl font-semibold mb-1">{resource.title}</h3>
                      <p class="text-gray-600 mb-3">{resource.description}</p>
                      
                      <a 
                        href={resource.link} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="inline-flex items-center text-primary-500 hover:text-primary-600 dark:text-primary-400 dark:hover:text-primary-300 font-medium transition-colors duration-200"
                        aria-label={`Download ${resource.title}`}
                      >
                        Access Resource
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                        </svg>
                      </a>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Need Assistance? -->
  <section class="py-16 bg-gradient-to-r from-indigo-800 to-purple-900 text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl font-bold mb-6">Need Assistance?</h2>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
          If you need help downloading or accessing any resources, our staff at Saurav Computer will be happy to assist you in person at our center.
        </p>
        
        <div class="grid md:grid-cols-2 gap-8 text-left max-w-4xl mx-auto mb-10">
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg border border-white/20">
            <h3 class="font-semibold text-lg mb-3 flex items-center">
              <svg class="h-5 w-5 text-white mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              Official Credentials
            </h3>
            <p class="opacity-90">
              Some resources require login credentials provided during course registration. If you've lost your credentials, please contact our center for assistance.
            </p>
          </div>
          
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-lg border border-white/20">
            <h3 class="font-semibold text-lg mb-3 flex items-center">
              <svg class="h-5 w-5 text-white mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Regular Updates
            </h3>
            <p class="opacity-90">
              Resources and forms are updated periodically. Always ensure you're using the latest versions, especially for application forms and examination materials.
            </p>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-indigo-500 transition-all duration-300">
            Contact Us for Help
          </a>
          <a href="tel:+919823779796" class="btn-outline border-2 border-white text-white hover:bg-white/10 font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-white/50 transition-all duration-300 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Us
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>