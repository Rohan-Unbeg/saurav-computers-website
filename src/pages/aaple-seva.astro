---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

// SEO details
const seoTitle = "Aaple Seva Kendra Services - MahaOnline CSC at Saurav Computer";
const seoDescription = "Access government services including certified land records, certificates, Aadhaar/PAN services, and online bookings at our MahaOnline CSC in Shendurjan.";

// Breadcrumbs
const breadcrumbs = [
  { title: "Home", url: "/" },
  { title: "Services", url: "#" },
  { title: "Aaple Seva Kendra", url: "/aaple-seva" }
];

// Define types for our service categories
type IconName = 'document-text' | 'identification' | 'clipboard-list' | 'ticket' | 'user-group' | 'document-report' | 'cash' | 'document-search' | 'document-download' | 'document-remove' | 'document-add' | 'document';

interface ServiceCategory {
  category: string;
  icon: IconName;
  services: string[];
}

// Service categories and their respective services
const serviceCategories: ServiceCategory[] = [
  {
    category: "Certificates & Records",
    icon: "document-text",
    services: [
      "Land Records (7/12 Extracts)",
      "Birth Certificates",
      "Death Certificates",
      "Income Certificates",
      "Domicile Certificates",
      "Caste Certificates",
      "Non-Creamy Layer Certificates",
      "Solvency Certificates"
    ]
  },
  {
    category: "Identity Services",
    icon: "identification",
    services: [
      "Aadhaar Card Services",
      "PAN Card Services",
      "Voter ID Card Services",
      "Residence Certificate"
    ]
  },
  {
    category: "Online Applications",
    icon: "clipboard-list",
    services: [
      "Government Recruitment Applications",
      "Scholarship Applications",
      "Various Government Scheme Applications",
      "NOC Applications"
    ]
  },
  {
    category: "Booking Services",
    icon: "ticket",
    services: [
      "MSRTC Online Ticket Booking",
      "National Park Ticket Bookings",
      "Railway Ticket Booking (IRCTC)",
      "Event and Lottery Registrations"
    ]
  }
];

// Get icon function
const getIcon = (iconName: IconName) => {
  switch(iconName) {
    case 'document-text':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>`;
    case 'identification':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
              </svg>`;
    case 'clipboard-list':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>`;
    case 'ticket':
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>`;
    default:
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
  }
};

// Requirements for service access
const requirements = [
  "Valid ID proof (Aadhaar, Voter ID, etc.)",
  "Recent passport size photographs (if applicable)",
  "Supporting documents specific to the service requested",
  "Mobile number linked to Aadhaar (for OTP verification)",
  "Service fee (varies based on the service)"
];
---

<Layout title={seoTitle} description={seoDescription}>
  <PageHeader 
    title="Aaple Seva Kendra Services" 
    subtitle="Access essential government services and certificates at our MahaOnline CSC"
    imageUrl="https://images.pexels.com/photos/2219035/pexels-photo-2219035.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
    breadcrumbs={breadcrumbs}
  />
  
  <!-- Overview Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto" data-aos="fade-up">
        <div class="flex flex-col md:flex-row items-center gap-6 md:gap-8 mb-12">
          <div class="w-full md:w-1/2">
            <img 
              src="https://images.pexels.com/photos/5668859/pexels-photo-5668859.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
              alt="Person using digital government services" 
              class="rounded-lg shadow-lg w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
          
          <div class="w-full md:w-1/2">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">MahaOnline Common Service Center</h2>
            <p class="text-gray-700 dark:text-gray-400 mb-4">
              As a CSC under MahaOnline (a joint venture between the Government of Maharashtra and TCS), Saurav Computer provides citizens easy access to various government services through the Aaple Sarkar portal.
            </p>
            <p class="text-gray-700 dark:text-gray-400">
              Our center serves approximately 75,000 citizens daily, bringing transparent and efficient digital governance to the doorstep of rural communities in Maharashtra.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 px-4 sm:px-0" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Available Services</h2>
        <p class="text-lg text-gray-700 dark:text-gray-400 max-w-3xl mx-auto">
          Our MahaOnline CSC provides a comprehensive range of government services to the citizens of Shendurjan and surrounding areas.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {serviceCategories.map((category, index) => (
          <div 
            class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 border border-gray-100 dark:border-gray-700 h-full"
            data-aos="fade-up"
            data-aos-delay={100 + (index * 50)}
          >
            <div class="flex items-center mb-4">
              <div class="p-2 rounded-full bg-primary-100 dark:bg-primary-900 w-12 h-12 flex items-center justify-center mr-4">
                <div class="text-primary-500 dark:text-primary-400" set:html={getIcon(category.icon)} />
              </div>
              
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{category.category}</h3>
            </div>
            
            <ul class="ml-4 space-y-2">
              {category.services.map(service => (
                <li class="flex items-start">
                  <svg class="h-5 w-5 text-primary-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700 dark:text-gray-400">{service}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- How It Works -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto" data-aos="fade-up">
        <div class="text-center mb-12 px-4 sm:px-0">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">How to Access Services</h2>
          <p class="text-lg text-gray-700 dark:text-gray-400">
            Follow these simple steps to access government services through our CSC.
          </p>
        </div>
        
        <div class="relative">
          <!-- Process Steps -->
          <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-primary-100 dark:bg-primary-900 transform -translate-x-1/2"></div>
          
          <div class="space-y-12">
            <div class="flex flex-col md:flex-row items-center" data-aos="fade-up">
              <div class="md:w-1/2 mb-4 md:mb-0 md:pr-12 md:text-right">
                <h3 class="text-xl font-semibold text-primary-600 mb-2">Step 1: Visit Our Center</h3>
                <p class="text-gray-700 dark:text-gray-400">Come to our center in Shendurjan with your requirements and identification documents.</p>
              </div>
              
              <div class="relative flex items-center justify-center w-10 h-10 rounded-full bg-primary-500 text-white font-bold z-10">1</div>
              
              <div class="md:w-1/2 md:pl-12 mt-4 md:mt-0">
                <img 
                  src="https://images.pexels.com/photos/936137/pexels-photo-936137.jpeg?auto=compress&cs=tinysrgb&w=600" 
                  alt="Visit Center" 
                  class="rounded-lg shadow-sm w-full max-w-xs mx-auto md:mx-0"
                  loading="lazy"
                />
              </div>
            </div>
            
            <div class="flex flex-col-reverse md:flex-row items-center" data-aos="fade-up">
              <div class="md:w-1/2 mt-4 md:mt-0 md:pr-12">
                <img 
                  src="https://images.pexels.com/photos/6358840/pexels-photo-6358840.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                  alt="Document Verification" 
                  class="rounded-lg shadow-sm w-full max-w-xs mx-auto md:mx-0"
                  loading="lazy"
                />
              </div>
              
              <div class="relative flex items-center justify-center w-10 h-10 rounded-full bg-primary-500 text-white font-bold z-10">2</div>
              
              <div class="md:w-1/2 md:pl-12 mb-4 md:mb-0">
                <h3 class="text-xl font-semibold text-primary-600 mb-2">Step 2: Document Verification</h3>
                <p class="text-gray-700 dark:text-gray-400">Our staff will verify your documents and guide you through the specific requirements.</p>
              </div>
            </div>
            
            <div class="flex flex-col md:flex-row items-center" data-aos="fade-up">
              <div class="md:w-1/2 mb-4 md:mb-0 md:pr-12 md:text-right">
                <h3 class="text-xl font-semibold text-primary-600 mb-2">Step 3: Application Processing</h3>
                <p class="text-gray-700 dark:text-gray-400">We'll process your application through the Aaple Sarkar portal with biometric verification if required.</p>
              </div>
              
              <div class="relative flex items-center justify-center w-10 h-10 rounded-full bg-primary-500 text-white font-bold z-10">3</div>
              
              <div class="md:w-1/2 md:pl-12 mt-4 md:mt-0">
                <img 
                  src="https://images.pexels.com/photos/7319303/pexels-photo-7319303.jpeg?auto=compress&cs=tinysrgb&w=600" 
                  alt="Application Processing" 
                  class="rounded-lg shadow-sm w-full max-w-xs mx-auto md:mx-0"
                  loading="lazy"
                />
              </div>
            </div>
            
            <div class="flex flex-col-reverse md:flex-row items-center" data-aos="fade-up">
              <div class="md:w-1/2 mt-4 md:mt-0 md:pr-12">
                <img 
                  src="https://images.pexels.com/photos/4226140/pexels-photo-4226140.jpeg?auto=compress&cs=tinysrgb&w=600" 
                  alt="Receive Certificate" 
                  class="rounded-lg shadow-sm w-full max-w-xs mx-auto md:mx-0"
                  loading="lazy"
                />
              </div>
              
              <div class="relative flex items-center justify-center w-10 h-10 rounded-full bg-primary-500 text-white font-bold z-10">4</div>
              
              <div class="md:w-1/2 md:pl-12 mb-4 md:mb-0">
                <h3 class="text-xl font-semibold text-primary-600 mb-2">Step 4: Receive Service</h3>
                <p class="text-gray-700 dark:text-gray-400">Get your certificates, complete your bookings, or access other services immediately or as per government processing times.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Requirements -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 border border-gray-100 dark:border-gray-700" data-aos="fade-up">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">What to Bring</h2>
        
        <div class="space-y-4">
          {requirements.map(requirement => (
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-gray-700 dark:text-gray-400">{requirement}</span>
            </div>
          ))}
        </div>
        
        <div class="mt-6 p-4 bg-amber-50 dark:bg-amber-900 rounded-md border border-amber-100 dark:border-amber-700">
          <div class="flex">
            <svg class="h-6 w-6 text-amber-500 mr-3 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h4 class="font-medium text-amber-800 dark:text-amber-200 mb-1">Important Note</h4>
              <p class="text-amber-700 dark:text-amber-100 text-sm">
                Specific services may require additional documentation. We recommend calling ahead to confirm requirements for your particular service need.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 bg-gradient-to-r from-indigo-800 to-purple-900">
    <div class="container mx-auto px-4 text-center text-white" data-aos="fade-up">
      <h2 class="text-3xl font-bold mb-4">Access Government Services Easily</h2>
      <p class="text-xl max-w-3xl mx-auto mb-8">
        Visit our center to access MahaOnline services through the Aaple Sarkar portal.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-indigo-500 transition-all duration-300">
          Contact Us
        </a>
        <a href="tel:+919823779796" class="btn-outline border-2 border-white text-white hover:bg-white/10 font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-white/50 transition-all duration-300 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Us
        </a>
      </div>
    </div>
  </section>
</Layout>