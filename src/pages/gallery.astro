---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import GalleryGrid from '../components/gallery/GalleryGrid.astro';

// SEO details
const seoTitle = "Gallery - Saurav Computer Center Photos";
const seoDescription = "Browse photos of Saurav Computer's facilities, training sessions, events, and digital service operations in Shendurjan, Maharashtra.";

// Breadcrumbs
const breadcrumbs = [
  { title: "Home", url: "/" },
  { title: "About", url: "#" },
  { title: "Gallery", url: "/gallery" }
];

// Gallery images grouped by category
const galleryCategories = [
  {
    category: "Center Facilities",
    images: [
      {
        src: "/images/gallery/lab pc setup.webp",
        alt: "Lab PC Setup at Saurav Computer",
        caption: "Lab PC Setup"
      },
      {
        src: "/images/gallery/store front image.webp",
        alt: "Store Front of Saurav Computer",
        caption: "Store Front"
      },
      {
        src: "/images/gallery/sv wall advertisement.webp",
        alt: "Wall Advertisement for Saurav Computer",
        caption: "Wall Advertisement"
      }
    ]
  },
  {
    category: "Service Operations",
    images: [
      {
        src: "/images/gallery/sbi seva kendra.webp",
        alt: "SBI Seva Kendra at Saurav Computer",
        caption: "SBI Seva Kendra"
      },
      {
        src: "/images/gallery/sv street banner.webp",
        alt: "Street Banner for Saurav Computer",
        caption: "Street Banner"
      }
    ]
  },
  {
    category: "Events & Certifications",
    images: [
      {
        src: "/images/gallery/amolsardegettinggift.jpeg",
        alt: "Amol Sarde receiving a gift at event",
        caption: "Amol Sarde receiving a gift",
        type: "image"
      },
      {
        src: "/images/gallery/studentcertificationdistribution.jpeg",
        alt: "Student receiving certificate",
        caption: "Student Certification Distribution",
        type: "image"
      },
      {
        src: "/images/gallery/vid1.mp4",
        alt: "Event video",
        caption: "Event Highlights Video",
        type: "video"
      }
    ]
  }
];
---

<Layout title={seoTitle} description={seoDescription}>
  <PageHeader 
    title="Photo Gallery" 
    subtitle="Visual highlights from our center, courses, and services"
    imageUrl="https://images.pexels.com/photos/3184398/pexels-photo-3184398.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
    breadcrumbs={breadcrumbs}
  />
  
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <p class="text-lg text-gray-700 dark:text-gray-300 text-center mb-12" data-aos="fade-up">
          Explore our gallery to see our facilities, training sessions, and service operations in action. These images showcase the learning environment and services we provide at Saurav Computer.
        </p>
        
        {galleryCategories.map((category, index) => (
          <div class="mb-16" data-aos="fade-up">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">{category.category}</h2>
            <GalleryGrid images={category.images} />
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <section class="py-16 bg-gradient-to-r from-indigo-800 to-purple-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl font-bold mb-4 text-white">Visit Our Center</h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Would you like to see our facilities in person? Visit our center in Shendurjan to learn more about our courses and services.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-indigo-500 transition-all duration-300"
          >
            Schedule a Visit
          </a>
          <a 
            href="tel:+919823779796" 
            class="border-2 border-white text-white hover:bg-white/10 font-semibold py-3 px-6 rounded-lg focus:ring-4 focus:ring-white/50 transition-all duration-300 flex items-center justify-center"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call Us
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>