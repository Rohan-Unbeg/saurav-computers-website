mkcl-programs.astro
---
import Layout from '../../layouts/Layout.astro';
import { mkclCourses } from '../../data/mkcl-courses';
import CourseModalWrapper from '../../components/courses/CourseModalWrapper.jsx';

// Set up SEO
const pageTitle = 'MKCL Programs | Saurav Computers';
const pageDescription = 'Explore our comprehensive MKCL programs including MS-CIT, GCC-TBC, and other professional courses. Enhance your digital skills with our expert-led training.';
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 dark:from-indigo-800 dark:to-indigo-900 pt-24 pb-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4 leading-tight">
          MKCL Programs
        </h1>
        <p class="text-xl text-indigo-100 max-w-3xl mx-auto">
          Comprehensive digital literacy and professional development programs with government-recognized certification
        </p>
      </div>
    </div>
  </div>

  <main class="py-12 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      {/* Breadcrumb */}
      <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-white">
              <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L4 11.414V18a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-6.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
              </svg>
              Home
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <a href="/courses" class="ms-1 text-sm font-medium text-gray-700 hover:text-indigo-600 md:ms-2 dark:text-gray-400 dark:hover:text-white">Courses</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">MKCL Programs</span>
            </div>
          </li>
        </ol>
      </nav>

      {/* Program Overview */}
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden mb-12">
        <div class="p-6 md:p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">About MKCL Programs</h2>
          <div class="prose dark:prose-invert max-w-none">
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
              Maharashtra Knowledge Corporation Limited (MKCL) offers a wide range of skill development and digital literacy programs designed to empower individuals with essential digital skills for the 21st century. Our programs are recognized by the Government of Maharashtra and provide industry-relevant training with certification.
            </p>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
              Whether you're looking to start your career, upgrade your skills, or gain government-recognized certification, our MKCL programs provide the perfect platform for your professional growth.
            </p>
          </div>
        </div>
      </div>

      {/* Course Categories and List */}
      <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Our MKCL Programs</h2>
        <CourseModalWrapper client:load />
      </div>

      {/* Program Benefits */}
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden mb-12">
        <div class="p-6 md:p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Why Choose MKCL Programs?</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {[
              {
                icon: '🏛️',
                title: 'Government Recognized',
                description: 'Certification recognized by Government of Maharashtra'
              },
              {
                icon: '👨‍🏫',
                title: 'Expert Trainers',
                description: 'Learn from certified and experienced instructors'
              },
              {
                icon: '💼',
                title: 'Career Support',
                description: 'Job placement assistance and career guidance'
              },
              {
                icon: '📱',
                title: 'Flexible Learning',
                description: 'Choose from classroom or online learning options'
              }
            ].map((benefit) => (
              <div class="text-center p-4" data-benefit={benefit.title.toLowerCase().replace(/\s+/g, '-')}>
                <div class="text-4xl mb-3">{benefit.icon}</div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{benefit.title}</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm">{benefit.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>

      {/* CTA Section */}
      <div class="bg-indigo-700 rounded-xl overflow-hidden">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
          <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
            <span class="block">Ready to enhance your digital skills?</span>
            <span class="block text-indigo-200">Start your learning journey today.</span>
          </h2>
          <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
            <div class="inline-flex rounded-md shadow">
              <a href="/contact" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50">
                Contact Us
              </a>
            </div>
            <div class="ml-3 inline-flex rounded-md shadow">
              <a href="tel:+919999999999" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 bg-opacity-60 hover:bg-opacity-70">
                Call Now
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

</Layout>