---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import ContactForm from '../components/contact/ContactForm.astro';

// SEO details
const seoTitle = "Contact Saurav Computer - Reach Our IT Training & Digital Services Team";
const seoDescription = "Contact Saurav Computer in Shendurjan, Maharashtra for inquiries about IT courses, SBI Kiosk Banking, or Aaple Seva Kendra services. Call 9823779796 or visit our center.";

// Breadcrumbs
const breadcrumbs = [
  { title: "Contact", url: "/contact" }
];

// Contact information
const contactInfo = {
  address: "Shendurjan, Taluka Sindkhed Raja, District Buldana, Maharashtra 443202",
  phone: ["9823779796", "8275233774"],
  email: "sauravcomputer@gmail.com",
  hours: [
    { days: "Monday - Friday", hours: "9:00 AM - 7:00 PM" },
    { days: "Saturday", hours: "9:00 AM - 5:00 PM" },
    { days: "Sunday", hours: "Closed" }
  ]
};
---

<Layout title={seoTitle} description={seoDescription}>
  <PageHeader 
    title="Contact Us" 
    subtitle="Reach out for inquiries about our courses and services"
    imageUrl="https://images.pexels.com/photos/7709085/pexels-photo-7709085.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
    breadcrumbs={breadcrumbs}
  />
  
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
          <!-- Contact Information -->
          <div data-aos="fade-right">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 dark:text-white">Get in Touch</h2>
            
            <div class="space-y-6 mb-8">
              <div class="flex items-start">
                <div class="p-2 rounded-full bg-primary-100 dark:bg-primary-600 w-10 h-10 flex items-center justify-center mt-1 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 dark:text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900 mb-1 dark:text-white">Address</h3>
                  <address class="not-italic text-gray-700 dark:text-gray-400">
                    {contactInfo.address}
                  </address>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="p-2 rounded-full bg-primary-100 dark:bg-primary-600 w-10 h-10 flex items-center justify-center mt-1 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 dark:text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900 mb-1 dark:text-white">Phone</h3>
                  <div class="space-y-1">
                    {contactInfo.phone.map(phone => (
                      <p class="text-gray-700 dark:text-gray-400">
                        <a href={`tel:+91${phone}`} class="hover:text-primary-600 transition">{phone}</a>
                      </p>
                    ))}
                  </div>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="p-2 rounded-full bg-primary-100 dark:bg-primary-600 w-10 h-10 flex items-center justify-center mt-1 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 dark:text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900 mb-1 dark:text-white">Email</h3>
                  <p class="text-gray-700 dark:text-gray-400">
                    <a href={`mailto:${contactInfo.email}`} class="hover:text-primary-600 transition">{contactInfo.email}</a>
                  </p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="p-2 rounded-full bg-primary-100 dark:bg-primary-600 w-10 h-10 flex items-center justify-center mt-1 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 dark:text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900 mb-1 dark:text-white">Business Hours</h3>
                  <div class="space-y-1">
                    {contactInfo.hours.map(schedule => (
                      <div class="text-gray-700 dark:text-gray-400  ">
                        <span class="font-medium">{schedule.days}:</span> {schedule.hours}
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Social Media -->
            <div>
              <h3 class="font-medium text-gray-900 dark:text-white mb-4">Connect With Us</h3>
              <div class="flex space-x-4">
                <a href="https://www.facebook.com/sauravcomputershendurjan" 
                  class="w-10 h-10 flex items-center justify-center rounded-full bg-[#1877F2] hover:bg-[#0c64d3] transition-all duration-300 transform hover:scale-110 hover:shadow-lg" 
                  aria-label="Facebook" 
                  target="_blank" 
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M13.397 20.997v-8.196h2.765l.411-3.209h-3.176V7.548c0-.926.258-1.56 1.587-1.56h1.684V3.127c-.82-.088-1.643-.13-2.467-.127-2.444 0-4.122 1.492-4.122 4.231v2.355H7.332v3.209h2.753v8.202h3.312z"/>
                  </svg>
                </a>
                
                <a href="https://www.instagram.com/amolsarade/" 
                  class="w-10 h-10 flex items-center justify-center rounded-full bg-gradient-to-br from-[#FF0066] via-[#f82] to-[#c32aa3] hover:from-[#FF1A75] hover:via-[#f93] hover:to-[#d83cb9] transition-all duration-300 transform hover:scale-110 hover:shadow-lg" 
                  aria-label="Instagram" 
                  target="_blank" 
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153.509.5.902 1.105 1.153 1.772.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 01-1.153 1.772c-.5.509-1.105.902-1.772 1.153-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 01-1.772-1.153 4.904 4.904 0 01-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 011.153-1.772A4.897 4.897 0 015.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 100 10 5 5 0 000-10zm6.5-.25a1.25 1.25 0 10-2.5 0 1.25 1.25 0 002.5 0zM12 9a3 3 0 110 6 3 3 0 010-6z"/>
                  </svg>
                </a>
                
                <a href="https://wa.me/919823779796" 
                  class="w-10 h-10 flex items-center justify-center rounded-full bg-[#25D366] hover:bg-[#1fa952] transition-all duration-300 transform hover:scale-110 hover:shadow-lg" 
                  aria-label="WhatsApp" 
                  target="_blank" 
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
                </a>
                
                <a href="mailto:sauravcomputer@gmail.com" 
                  class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-600 hover:bg-gray-700 transition-all duration-300 transform hover:scale-110 hover:shadow-lg" 
                  aria-label="Email" 
                  target="_blank" 
                  rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20 4H4c-1.103 0-2 .897-2 2v12c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2zm0 2v.511l-8 6.223-8-6.222V6h16zM4 18V9.044l7.386 5.745a.994.994 0 0 0 1.228 0L20 9.044 20.002 18H4z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div data-aos="fade-left">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 dark:text-white">Contact Form</h2>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 dark:text-white text-center">Our Location</h2>
        <div class="rounded-xl overflow-hidden shadow-lg max-w-4xl mx-auto" data-aos="fade-up">
          <div class="w-full">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3746.156289947748!2d76.38408679999999!3d20.1275263!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bda7460fd74ae97%3A0x5da090ecebbfee46!2ssaurav%20computer%20shendurjan!5e0!3m2!1sen!2sin!4v1749291974777!5m2!1sen!2sin" 
                width="100%" 
                height="100%" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                class="w-full h-[300px] md:h-[350px] lg:h-[400px]"
              ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
