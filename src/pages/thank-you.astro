---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const seoTitle = "Thank You - Saurav Computers";
const seoDescription = "Thank you for contacting Saurav Computers. We'll get back to you soon!";
---

<Layout title={seoTitle} description={seoDescription}>
  <PageHeader 
    title="Thank You!"
    subtitle="We've received your message"
    imageUrl="/images/hero/contact.jpg"
  />

  <section class="py-12 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Message Sent Successfully!</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Thank you for contacting Saurav Computers. We've received your message and will get back to you within 24-48 hours.
        </p>
        <a 
          href="/" 
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 transition-colors duration-200"
        >
          Back to Home
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
