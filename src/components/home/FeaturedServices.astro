---
// No need for Fragment import
// Define featured services
const featuredCourses = [
  {
    id: "ms-cit",
    title: "MS-CIT",
    description: "Maharashtra State Certificate in Information Technology - a basic computer literacy course recognized by the government.",
    imageUrl: "/images/courses/ms-cit.jpg",
    duration: "3-4 months",
    level: "Beginner",
    category: "IT Literacy",
    outcomes: [
      "Basic computer operations",
      "Internet and email usage",
      "Word processing and spreadsheets",
      "Digital financial services"
    ],
    link: "/courses/ms-cit"
  },
  {
    id: "gcc-tbc",
    title: "GCC-TBC",
    description: "Government Certificate in Computer Typing Basic Course for English and Marathi typing proficiency.",
    imageUrl: "/images/courses/gcc-tbc.jpg",
    duration: "3 months",
    level: "Beginner",
    category: "Typing",
    outcomes: [
      "Touch typing skills",
      "Speed and accuracy",
      "English/Marathi typing",
      "Document formatting"
    ],
    link: "/courses/gcc-tbc"
  },
  {
    id: "mkcl-klic",
    title: "MKCL KLiC Diploma",
    description: "Knowledge Literacy for Colleges - professional diploma for enhanced employability.",
    imageUrl: "/images/courses/mkcl-klic-courses.jpg",
    duration: "6-12 months",
    level: "Beginner to Advanced",
    category: "Professional Development",
    outcomes: [
      "Industry-relevant skills",
      "Practical training",
      "Certification",
      "Job placement support"
    ],
    link: "/courses/mkcl-klic"
  }
];

const featuredServices = [
  {
    id: "sbi-kiosk",
    title: "SBI Kiosk Banking",
    description: "Access banking services including deposits, withdrawals, transfers, and account opening through our authorized SBI CSP.",
    imageUrl: "/images/services/sbi-kiosk.jpg",
    duration: "Available during business hours",
    level: "All Customers",
    category: "Banking Services",
    outcomes: [
      "Account opening",
      "Cash deposit/withdrawal",
      "Fund transfers",
      "Balance inquiry"
    ],
    link: "/sbi-kiosk"
  },
  {
    id: "aaple-seva",
    title: "Aaple Seva Kendra",
    description: "Obtain government certificates, records, and access online booking services through our MahaOnline CSC.",
    imageUrl: "/images/services/aaple-seva.jpg",
    duration: "Available during business hours",
    level: "All Citizens",
    category: "Government Services",
    outcomes: [
      "Caste/Income certificates",
      "Property records",
      "Online form submissions",
      "Bill payments"
    ],
    link: "/aaple-seva"
  }
];
---

<section class="section-alt py-12 sm:py-16 lg:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Courses section -->
    <div class="mb-16 sm:mb-20" data-aos="fade-up">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8 mb-10 sm:mb-14">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3 sm:mb-4">
          Featured IT Courses
        </h2>
        <p class="text-base sm:text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
          Our professionally designed courses equip students with in-demand digital skills for today's competitive job market.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {featuredCourses.map((course, index) => {
          const delay = 100 + (index * 50);
          const courseKey = `course-${course.id}`;
          return (
            <div 
              class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow duration-300 transform hover:-translate-y-1 group h-full flex flex-col"
              data-aos="fade-up"
              data-aos-delay={delay}
              data-key={courseKey}
            >
              <div class="relative h-48 bg-gray-100 dark:bg-gray-700 overflow-hidden">
                <img 
                  src={course.imageUrl} 
                  alt={`${course.title} course`}
                  class="absolute inset-0 w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                  onerror="this.onerror=null;this.src='data:image/svg+xml;base64,';"
                />
                <div class="absolute bottom-0 left-0 right-0 p-2 bg-gradient-to-t from-black/70 to-transparent">
                  <span class="text-white text-sm font-medium">{course.duration}</span>
                </div>
              </div>
              <div class="p-6">
                <div class="flex justify-between items-start">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{course.title}</h3>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
                    {course.level}
                  </span>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-3 line-clamp-2 text-sm">
                  {course.description}
                </p>
                
                <div class="mb-4">
                  <h4 class="text-xs font-medium text-gray-900 dark:text-white mb-1">You'll learn:</h4>
                  <ul class="space-y-1">
                    {
                      course.outcomes.slice(0, 2).map((outcome, i) => {
                        const outcomeKey = `outcome-${i}`;
                        return (
                          <li class="flex items-start" data-key={outcomeKey}>
                            <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span class="text-sm text-gray-600 dark:text-gray-300">{outcome}</span>
                          </li>
                        );
                      })
                    }
                    {course.outcomes.length > 2 && (
                      <li class="text-xs text-indigo-600 dark:text-indigo-400 ml-6">
                        +{course.outcomes.length - 2} more
                      </li>
                    )}
                  </ul>
                </div>

                <a 
                  href={course.link}
                  class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                  View Details
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
    
    <!-- Services section -->
    <div data-aos="fade-up">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8 mb-10 sm:mb-14">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3 sm:mb-4">
          Essential Services
        </h2>
        <p class="text-base sm:text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
          Beyond education, we provide essential digital services to support our community's needs.
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {featuredServices.map((service, index) => {
          const delay = 100 + (index * 50);
          const serviceKey = `service-${service.id}`;
          return (
            <div 
              class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow duration-300 transform hover:-translate-y-1 group"
              data-aos="fade-up"
              data-aos-delay={delay}
              data-key={serviceKey}
            >
              <div class="relative pb-[56.25%] bg-gray-100 dark:bg-gray-700 overflow-hidden">
                <img 
                  src={"/images/services/" + service.id + ".jpg"} 
                  alt={`${service.title} service`}
                  class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                  onerror="this.onerror=null;this.src='data:image/svg+xml;base64,';"
                />
                <div class="absolute bottom-0 left-0 right-0 p-2 bg-gradient-to-t from-black/70 to-transparent">
                  <span class="text-white text-sm font-medium">{service.duration}</span>
                </div>
              </div>
              <div class="p-6">
                <div class="flex justify-between items-start">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{service.title}</h3>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                    {service.category}
                  </span>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  {service.description}
                </p>
                
                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Services include:</h4>
                  <ul class="space-y-1">
                    {
                      service.outcomes.slice(0, 3).map((outcome, i) => {
                        const serviceOutcomeKey = `service-outcome-${i}`;
                        return (
                          <li class="flex items-start" data-key={serviceOutcomeKey}>
                            <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <span class="text-sm text-gray-600 dark:text-gray-300">{outcome}</span>
                          </li>
                        );
                      })
                    }
                  </ul>
                </div>

                <a 
                  href={service.link}
                  class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                  Learn More
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>